<% @conversations.each do |conversation| %>
  <% conversation.messages.each do |message| %>
    <% if message.user != current_user %>
      <div class="card-product">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{message.user.username}", class: "avatar dropdown-toggle" %>
        <div class="card-product-infos">
          <%= link_to conversation_path(conversation) do %>
            <%= message.user.username %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
<div>
  <h3>Nearby</h3>
  <% @nearby_users.each do |user| %>
    <% if !user.conversations.present? %>
      <div class="card-product">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{user.username}", class: "avatar dropdown-toggle" %>
        <div class="card-product-infos">
          <%= link_to user_conversations_path(user), method: :post do %>
            <%= user.username %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
