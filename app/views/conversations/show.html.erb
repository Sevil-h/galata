<div class="container navbar-margin conversation-show">
  <div>
    <div class="conv-info">
      <p><i class="far fa-comments"></i></p>
      <h3><%= @conversation.participants.second.user.username %></h3>
    </div>
    <div id="messages" data-conversation-id="<%= @conversation.id %>">
      <% @conversation.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <%= simple_form_for [ @conversation, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message" %>
    <% end %>
  </div>
</div>
