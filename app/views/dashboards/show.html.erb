<div class="container mt-3">
  <h1> My Uploads</h1>
  <% @my_uploads.each do |content| %>
    <div class="card-uploads">
      <%= image_tag "https://source.unsplash.com/random" %>
      <div class="card-uploads-infos">
        <h2><%= "#{content.title}" %></h2>
        <p><%= "Description:" %></p> 
        <p><%= "Format: #{content.format}" %></p>
      </div>
      <% if content.type == 'Article' %>
        <%= link_to "X", site_article_path(content.site, content), method: :delete, data: {confirm: "Are you sure?"} %>
      <% elsif content.type == 'Photo' %>
        <%= link_to "X", site_photo_path(content.site, content), method: :delete, data: {confirm: "Are you sure?"} %>
      <% elsif content.type == 'Audio' %>
        <%= link_to "X", site_audio_path(content.site, content), method: :delete, data: {confirm: "Are you sure?"} %>
      <% elsif content.type == 'Video' %>
        <%= link_to "X", site_video_path(content.site, content), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
  <% end %>
</div>  