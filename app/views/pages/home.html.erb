<div class="container">
  <%= link_to  "Nearby sites", sites_path, class: 'btn btn-info' %>

  <%= form_with url: '/', method: :get do |form| %>
    <%= form.collection_check_boxes :categories, [['History'], ['Landmark']], :first, :first, include_hidden: false %>
    <%= form.submit "Filter by Category" %>
  <% end %>
  <% if user_signed_in? %>
  <%= link_to "Find Sites Near Me (Current Address)", root_path(location: true), class: "btn btn-primary" %>
    <a class="btn btn-info" id="js-geolocate-btn">Find Sites Near Me (Geolocation)</a>
  <% end %>
</div>
<div class="container">
    <div class="loader d-none">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </div>
<div class="container">
  <div id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @site_markers.to_json %>"
    data-usermarkers="<%= @user_markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


