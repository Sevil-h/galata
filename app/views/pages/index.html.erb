<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url(https://upload.wikimedia.org/wikipedia/commons/1/1a/Istanbul_Galata_Tower_%28243781971%29.jpeg)">
    <h1>Galata</h1>
      <div class="m-2">
        <%= form_tag sites_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a site" %>
        <% end %>
      </div>
      <div class="mt-2">
        <p><strong>Add a new site</strong></p>
      </div>
    </div>

  <div class="search-bar">
    <div class="search-bar-right-side">
      <div class="cards m-3">
        <% @sites.each do |site| %>
          <% background_url = cl_image_path site.photos.first.key, height: 300, width: 500, crop: :fill %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
            <p><%= link_to site.name, site_path(site) %></p>
            <p><span>Â£</span>
            <%= "#{site.rate}/month" %></p>
          </div>
        <% end %>
      </div>
    <div class= "mx-3">
        <%= link_to 'Add a new site', new_site_path, class: 'button'  %>
      </div>
    </div>
  </div>
</div>