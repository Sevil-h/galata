<div class="container">
  <div>
    <%= link_to 'Show Map', root_path, class: 'btn btn-primary my-3' %>
    <div class="sites-container">
      <% @sites.each do |site| %>
          <div class="card my-3">
            <div>
              <% site.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 200, width: 300 %>
              <% end %>
              <%= link_to site_path(site) do %>
                <h4><%= site.name %></h4>
              <% end %>
              <p><%= site.description %></p>
            </div>
            <div>
              <span><%= site.contents.where(type: "Audio").count %> </span><i class="fas fa-headphones"></i>
              <span><%= site.contents.where(type: "Article").count %> </span><i class="fas fa-book-open"></i>
              <span><%= site.contents.where(type: "Video").count %> </span><i class="fas fa-images"></i>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
